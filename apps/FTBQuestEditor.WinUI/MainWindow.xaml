<Window
    x:Class="FTBQuestEditor.WinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:FTBQuestEditor.WinUI.Views">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <CommandBar x:Name="Toolbar" DefaultLabelPosition="Right">
            <AppBarButton Icon="OpenFile" Label="Import" Click="OnImportClicked" />
            <AppBarButton Icon="Save" Label="Presets" Click="OnPresetsClicked" />
        </CommandBar>

        <views:ChapterNavigator x:Name="Navigator" Grid.Row="1" />
    </Grid>
</Window>
