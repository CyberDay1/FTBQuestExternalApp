<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:tasks="using:FTBQuestEditor.WinUI.ViewModels.Tasks"
    xmlns:converters="using:FTBQuestEditor.WinUI.Converters">
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <DataTemplate x:DataType="tasks:ItemTaskPropertiesViewModel">
        <StackPanel Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Item Identifier" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding ItemId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="namespace:path"
                    ToolTipService.ToolTip="{Binding ItemIssue}" />
                <TextBlock
                    Text="{Binding ItemIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding ItemIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Count" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="1"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding CountIssue}" />
                <TextBlock
                    Text="{Binding CountIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding CountIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="NBT (Optional)" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding Nbt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    ToolTipService.ToolTip="{Binding NbtIssue}" />
                <TextBlock
                    Text="{Binding NbtIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding NbtIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

