        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Advancement Identifier" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding AdvancementId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="namespace:path"
                    ToolTipService.ToolTip="{Binding AdvancementIssue}" />
                <TextBlock
                    Text="{Binding AdvancementIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding AdvancementIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="tasks:KillTaskPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Entity Identifier" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding EntityId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="namespace:path"
                    ToolTipService.ToolTip="{Binding EntityIssue}" />
                <TextBlock
                    Text="{Binding EntityIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding EntityIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Amount" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="1"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding AmountIssue}" />
                <TextBlock
                    Text="{Binding AmountIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding AmountIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="tasks:LocationTaskPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="12">
                <StackPanel Spacing="4" Width="120">
                    <TextBlock Text="X" FontWeight="SemiBold" />
                    <controls:NumberBox
                        Value="{Binding X, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SmallChange="1" />
                </StackPanel>
                <StackPanel Spacing="4" Width="120">
                    <TextBlock Text="Y" FontWeight="SemiBold" />
                    <controls:NumberBox
                        Value="{Binding Y, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SmallChange="1" />
                </StackPanel>
                <StackPanel Spacing="4" Width="120">
                    <TextBlock Text="Z" FontWeight="SemiBold" />
                    <controls:NumberBox
                        Value="{Binding Z, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        SmallChange="1" />
                </StackPanel>
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Dimension (Optional)" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding Dimension, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTipService.ToolTip="{Binding DimensionIssue}" />
                <TextBlock
                    Text="{Binding DimensionIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding DimensionIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4" Width="160">
                <TextBlock Text="Radius" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Radius, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding RadiusIssue}" />
                <TextBlock
                    Text="{Binding RadiusIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding RadiusIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="tasks:XpTaskPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4" Width="160">
                <TextBlock Text="Amount" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding AmountIssue}" />
                <TextBlock
                    Text="{Binding AmountIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding AmountIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Treat value as levels" FontWeight="SemiBold" />
                <controls:ToggleSwitch
                    IsOn="{Binding Levels, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTipService.ToolTip="{Binding LevelsIssue}" />
                <TextBlock
                    Text="{Binding LevelsIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding LevelsIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

