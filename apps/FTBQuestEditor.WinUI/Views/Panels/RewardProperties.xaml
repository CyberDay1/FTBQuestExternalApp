<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.UI.Xaml.Controls"
    xmlns:converters="using:FTBQuestEditor.WinUI.Converters"
    xmlns:rewards="using:FTBQuestEditor.WinUI.ViewModels.Rewards">
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />

    <DataTemplate x:DataType="rewards:ItemRewardPropertiesViewModel">
        <StackPanel Spacing="16">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Item Identifier" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding ItemId, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="namespace:path"
                    ToolTipService.ToolTip="{Binding ItemIssue}" />
                <TextBlock
                    Text="{Binding ItemIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding ItemIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Count" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Count, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="1"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding CountIssue}" />
                <TextBlock
                    Text="{Binding CountIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding CountIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="NBT (Optional)" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding Nbt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="True"
                    TextWrapping="Wrap"
                    ToolTipService.ToolTip="{Binding NbtIssue}" />
                <TextBlock
                    Text="{Binding NbtIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding NbtIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:LootRewardPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Loot Table" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding LootTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    PlaceholderText="namespace:path"
                    ToolTipService.ToolTip="{Binding LootIssue}" />
                <TextBlock
                    Text="{Binding LootIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding LootIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:XpRewardPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4" Width="160">
                <TextBlock Text="Amount" FontWeight="SemiBold" />
                <controls:NumberBox
                    Value="{Binding Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Minimum="0"
                    SmallChange="1"
                    ToolTipService.ToolTip="{Binding AmountIssue}" />
                <TextBlock
                    Text="{Binding AmountIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding AmountIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Treat value as levels" FontWeight="SemiBold" />
                <controls:ToggleSwitch
                    IsOn="{Binding Levels, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTipService.ToolTip="{Binding LevelsIssue}" />
                <TextBlock
                    Text="{Binding LevelsIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding LevelsIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:CommandRewardPropertiesViewModel">
        <StackPanel Spacing="12">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>

            <StackPanel Spacing="4">
                <TextBlock Text="Command" FontWeight="SemiBold" />
                <TextBox
                    Text="{Binding Command, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    ToolTipService.ToolTip="{Binding CommandIssue}"
                    TextWrapping="Wrap" />
                <TextBlock
                    Text="{Binding CommandIssue}"
                    Foreground="{ThemeResource SystemFillColorCriticalBrush}"
                    Visibility="{Binding CommandIssue, Converter={StaticResource StringToVisibilityConverter}}" />
            </StackPanel>
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:CustomRewardPropertiesViewModel">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:UnknownRewardPropertiesViewModel">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>

    <DataTemplate x:DataType="rewards:ExternalRewardPropertiesViewModel">
        <StackPanel Spacing="8">
            <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                <TextBlock Text="{Binding DisplayName}" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding TypeId}" FontStyle="Italic" Opacity="0.6" />
            </StackPanel>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" />
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>
