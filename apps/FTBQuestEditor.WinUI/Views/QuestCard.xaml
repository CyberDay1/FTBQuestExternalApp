<UserControl
    x:Class="FTBQuestEditor.WinUI.Views.QuestCard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:FTBQuestEditor.WinUI.ViewModels"
    x:Name="Self"
    x:DataType="vm:QuestNodeViewModel">
    <Border
        Margin="8"
        Padding="12"
        CornerRadius="8"
        Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
        BorderThickness="1">
        <StackPanel Spacing="4" MinWidth="160">
            <TextBlock Text="{x:Bind Title, Mode=OneWay}" FontSize="16" FontWeight="SemiBold" TextWrapping="WrapWholeWords" />
            <TextBlock Text="{x:Bind Subtitle, Mode=OneWay}" FontStyle="Italic" Opacity="0.75" TextWrapping="WrapWholeWords" />
        </StackPanel>
    </Border>
</UserControl>
