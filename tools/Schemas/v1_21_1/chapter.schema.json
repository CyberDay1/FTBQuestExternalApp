{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ftbquests.app/schemas/v1_21_1/chapter.schema.json",
  "title": "Chapter",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "quests"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": [
        "string",
        "null"
      ]
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "icon": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "iconId": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "icon_id": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "quests": {
      "type": "array",
      "items": {
        "$ref": "https://ftbquests.app/schemas/v1_21_1/quest.schema.json"
      }
    }
  }
}
