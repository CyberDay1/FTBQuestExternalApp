{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ftbquests.app/schemas/v1_21_1/quest.schema.json",
  "title": "Quest",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id"
  ],
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "type": [
        "string",
        "null"
      ]
    },
    "subtitle": {
      "type": [
        "string",
        "null"
      ]
    },
    "icon": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "iconId": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "icon_id": {
      "type": [
        "string",
        "null"
      ],
      "pattern": "^[a-z0-9_.-]+:[a-z0-9_./-]+$"
    },
    "x": {
      "type": [
        "integer",
        "null"
      ]
    },
    "y": {
      "type": [
        "integer",
        "null"
      ]
    },
    "page": {
      "type": [
        "integer",
        "null"
      ]
    },
    "dependencies": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "type": "string",
        "format": "uuid"
      }
    },
    "tasks": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "https://ftbquests.app/schemas/v1_21_1/task.schema.json"
      }
    },
    "rewards": {
      "type": [
        "array",
        "null"
      ],
      "items": {
        "$ref": "https://ftbquests.app/schemas/v1_21_1/reward.schema.json"
      }
    }
  }
}
