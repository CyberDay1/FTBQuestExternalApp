<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.ftbq.editor.controller.ItemBrowserController">
    <top>
        <HBox spacing="8">
            <padding>
                <Insets top="8" right="8" bottom="8" left="8"/>
            </padding>
            <children>
                <TextField fx:id="searchField" promptText="Search items..." HBox.hgrow="ALWAYS"/>
                <ComboBox fx:id="modFilterBox" promptText="Filter by Mod"/>
                <ComboBox fx:id="tagFilterBox" promptText="Filter by Tag"/>
                <ComboBox fx:id="kindFilterBox" promptText="Filter by Kind"/>
                <CheckBox fx:id="vanillaOnlyCheck" text="Vanilla only"/>
                <ComboBox fx:id="sortModeBox" promptText="Sort Mode"/>
            </children>
        </HBox>
    </top>
    <center>
        <TableView fx:id="itemTable">
            <columns>
                <TableColumn fx:id="iconColumn" text="Icon" prefWidth="72"/>
                <TableColumn fx:id="idColumn" text="Item ID" prefWidth="180"/>
                <TableColumn fx:id="displayNameColumn" text="Display Name" prefWidth="220"/>
                <TableColumn fx:id="modColumn" text="Mod" prefWidth="160"/>
                <TableColumn fx:id="kindColumn" text="Kind" prefWidth="120"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <children>
                <Button fx:id="selectButton" text="Select" onAction="#handleSelect"/>
                <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
