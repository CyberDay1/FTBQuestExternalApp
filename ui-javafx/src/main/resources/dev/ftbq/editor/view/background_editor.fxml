<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" xmlns="http://javafx.com/javafx/21.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dev.ftbq.editor.controller.BackgroundEditorController">
    <padding>
        <Insets top="12" right="16" bottom="12" left="16" />
    </padding>
    <children>
        <Label text="Background Source" styleClass="background-section-header" />
        <HBox spacing="8">
            <children>
                <Button fx:id="chooseImageButton" text="Choose Image" onAction="#onChooseImage" />
                <Label fx:id="imagePathLabel" text="No image selected" wrapText="true"
                       VBox.vgrow="NEVER" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints minWidth="110" halignment="RIGHT" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="32" />
                <RowConstraints minHeight="32" />
                <RowConstraints minHeight="32" />
            </rowConstraints>
            <Label text="Color" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <ColorPicker fx:id="colorPicker" onAction="#onColorPick"
                        GridPane.rowIndex="0" GridPane.columnIndex="1" />
            <Label text="Alignment" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="alignmentComboBox" promptText="Auto" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            <Label text="Repeat" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="repeatComboBox" promptText="Tile mode" GridPane.rowIndex="2" GridPane.columnIndex="1" />
        </GridPane>
        <TitledPane text="Preview" collapsible="false">
            <content>
                <StackPane minHeight="160" prefHeight="180">
                    <children>
                        <Pane fx:id="previewPane" prefWidth="280" prefHeight="180"
                              styleClass="background-preview-pane" />
                    </children>
                    <padding>
                        <Insets top="8" right="8" bottom="8" left="8" />
                    </padding>
                </StackPane>
            </content>
        </TitledPane>
    </children>
</VBox>
