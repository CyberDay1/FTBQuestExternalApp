<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.ftbq.editor.controller.LootTableEditorController"
      spacing="10"
      alignment="CENTER_LEFT"
      style="-fx-padding: 10;">

    <children>
        <Label text="Loot Table Editor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="tableNameField" promptText="Enter loot table name" />
        <ListView fx:id="lootItemList" prefHeight="200.0" prefWidth="400.0" />
        <TableView fx:id="entryTable" prefHeight="250.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="iconColumn" text="Icon" prefWidth="100.0" />
            </columns>
        </TableView>
        <Button fx:id="addItemButton" text="Add Item" />
        <Button fx:id="removeItemButton" text="Remove Selected" />
    </children>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

</VBox>
