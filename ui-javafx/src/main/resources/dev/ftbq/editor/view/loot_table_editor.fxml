<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dev.ftbq.editor.controller.LootTableEditorController"
      spacing="10"
      alignment="CENTER_LEFT"
      style="-fx-padding: 10;">

    <children>
        <Label text="Loot Table Editor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <TextField fx:id="tableNameField" promptText="Enter loot table name" />
        <ListView fx:id="lootItemList" prefHeight="200.0" prefWidth="400.0" />
        <Button fx:id="addPoolButton" text="Add Pool" onAction="#onAddPool" />
        <TableView fx:id="entryTable" prefHeight="250.0" prefWidth="400.0">
            <columns>
                <TableColumn fx:id="iconColumn" text="Icon" prefWidth="80.0" />
                <TableColumn fx:id="itemIdColumn" text="Item ID" prefWidth="180.0" />
                <TableColumn fx:id="displayNameColumn" text="Display Name" prefWidth="180.0" />
                <TableColumn fx:id="weightColumn" text="Weight" prefWidth="100.0" />
                <TableColumn fx:id="conditionsColumn" text="Conditions" prefWidth="200.0" />
            </columns>
        </TableView>
        <HBox spacing="8">
            <children>
                <Button fx:id="addEntryButton" text="Add Entry" onAction="#onAddEntry" />
                <Button fx:id="removeEntryButton" text="Remove Selected" onAction="#onRemoveEntry" />
            </children>
        </HBox>
        <HBox spacing="8" alignment="CENTER_LEFT">
            <children>
                <Button fx:id="previewButton" text="Preview" onAction="#onPreview" />
                <Label fx:id="previewSummary" wrapText="true" />
            </children>
        </HBox>
    </children>

    <padding>
        <Insets top="10" right="10" bottom="10" left="10" />
    </padding>

</VBox>
