<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.ftbq.editor.controller.ChapterEditorController">
    <top>
        <HBox alignment="CENTER_LEFT" spacing="12" BorderPane.alignment="CENTER_LEFT">
            <children>
                <Label text="Chapter" />
                <Label fx:id="chapterTitleLabel" text="" />
            </children>
            <BorderPane.margin>
                <Insets top="8" right="8" bottom="8" left="12" />
            </BorderPane.margin>
        </HBox>
    </top>
    <left>
        <VBox spacing="8" prefWidth="240" BorderPane.alignment="CENTER_LEFT">
            <children>
                <TextField fx:id="chapterSearchField" promptText="Search chapters" />
                <ListView fx:id="chapterListView" VBox.vgrow="ALWAYS" onMouseClicked="#onChapterSelected" />
            </children>
            <BorderPane.margin>
                <Insets top="12" right="12" bottom="12" left="12" />
            </BorderPane.margin>
        </VBox>
    </left>
    <center>
        <StackPane fx:id="canvasHolder" prefWidth="800" prefHeight="600" styleClass="canvas-container" />
    </center>
    <right>
        <VBox spacing="8" prefWidth="260" BorderPane.alignment="CENTER">
            <children>
                <Label text="Tasks" />
                <ListView fx:id="taskList" VBox.vgrow="ALWAYS" />
                <MenuButton fx:id="addTaskMenu" text="Add Task" />
                <Label text="Rewards" />
                <ListView fx:id="rewardList" VBox.vgrow="ALWAYS" />
                <MenuButton fx:id="addRewardMenu" text="Add Reward" />
                <Label text="Dependencies" />
                <ListView fx:id="dependencyList" VBox.vgrow="ALWAYS" />
                <Button text="Add Dependency" onAction="#onAddDependency" />
            </children>
        </VBox>
    </right>
</BorderPane>
