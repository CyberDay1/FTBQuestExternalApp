<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml"
            fx:controller="dev.ftbq.editor.controller.ChapterEditorController">

    <!-- TOP: Chapter Title Bar with Actions -->
    <top>
        <HBox spacing="12" alignment="CENTER_LEFT" styleClass="chapter-header" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="12" right="24" bottom="12" left="24" />
            </padding>
            <Label fx:id="chapterTitle" styleClass="title" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="+ New Quest" onAction="#onCreateQuest" style="-fx-font-weight: bold;"/>
            <Button text="+ New Chapter" onAction="#onCreateChapter"/>
        </HBox>
    </top>

    <!-- LEFT: Chapter List -->
    <left>
        <VBox spacing="8" prefWidth="240" styleClass="chapter-list-panel" BorderPane.alignment="CENTER_LEFT">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
            <Label text="Chapters" style="-fx-font-weight: bold;" />
            <TextField fx:id="chapterSearchField" promptText="Search chapters..." />
            <ListView fx:id="chapterListView" VBox.vgrow="ALWAYS" onMouseClicked="#onChapterSelected" />
        </VBox>
    </left>

    <!-- CENTER: Quest Canvas with Gridlines -->
    <center>
        <StackPane BorderPane.alignment="CENTER" style="-fx-background-color: white;">
            <ScrollPane fx:id="questScrollPane" fitToWidth="true" fitToHeight="true"
                       pannable="true" style="-fx-background-color: white;">
                <StackPane>
                    <!-- Grid Canvas (background with gridlines) -->
                    <Pane fx:id="gridCanvas" styleClass="quest-grid-canvas"
                          minWidth="2000" minHeight="2000"
                          style="-fx-background-color: #f5f5f5;" />

                    <!-- Quest Pane (foreground with quest nodes) -->
                    <Pane fx:id="questPane" styleClass="quest-pane"
                          minWidth="2000" minHeight="2000"
                          onMousePressed="#onQuestGridMousePressed"
                          onMouseClicked="#onQuestPaneClicked" />
                </StackPane>
            </ScrollPane>
        </StackPane>
    </center>

    <!-- RIGHT: Quest Details Panel (shown when quest selected) -->
    <right>
        <VBox fx:id="questDetailsPanel" spacing="8" prefWidth="280"
              styleClass="quest-details-panel" visible="false" managed="false"
              BorderPane.alignment="CENTER">
            <padding>
                <Insets top="12" right="12" bottom="12" left="12" />
            </padding>
            <Label text="Quest Details" style="-fx-font-size: 16px; -fx-font-weight: bold;" />

            <Label text="Tasks" style="-fx-font-weight: bold; -fx-padding: 8 0 4 0;" />
            <ListView fx:id="taskList" prefHeight="150" VBox.vgrow="SOMETIMES" />
            <MenuButton fx:id="addTaskMenu" text="Add Task" maxWidth="Infinity" />

            <Label text="Rewards" style="-fx-font-weight: bold; -fx-padding: 8 0 4 0;" />
            <ListView fx:id="rewardList" prefHeight="150" VBox.vgrow="SOMETIMES" />
            <MenuButton fx:id="addRewardMenu" text="Add Reward" maxWidth="Infinity" />

            <Label text="Dependencies" style="-fx-font-weight: bold; -fx-padding: 8 0 4 0;" />
            <ListView fx:id="dependencyList" prefHeight="120" VBox.vgrow="SOMETIMES" />
            <Button text="Add Dependency" onAction="#onAddDependency" maxWidth="Infinity" />
        </VBox>
    </right>
</BorderPane>
