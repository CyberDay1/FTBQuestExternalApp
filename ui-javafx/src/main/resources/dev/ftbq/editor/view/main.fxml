<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="dev.ftbq.editor.controller.MainController">
    <top>
        <HBox alignment="CENTER_LEFT">
            <children>
                <fx:include fx:id="menu" source="main_menu.fxml"/>
                <Pane HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </top>
    <center>
        <TabPane fx:id="mainTabs" id="mainTabs">
            <tabs>
                <Tab text="Chapter Groups" closable="false">
                    <content>
                        <fx:include fx:id="chapterGroupBrowser" source="chapter_group_browser.fxml"/>
                    </content>
                </Tab>
                <Tab text="Chapter Editor" closable="false">
                    <content>
                        <fx:include fx:id="chapterEditor" source="chapter_editor.fxml"/>
                    </content>
                </Tab>
                <Tab text="Loot Tables" closable="false">
                    <content>
                        <fx:include source="loot_table_editor.fxml"/>
                    </content>
                </Tab>
                <Tab id="aiQuestTab" text="AI Quest Creation" closable="false"/>
                <Tab text="Settings" closable="false">
                    <content>
                        <fx:include source="settings.fxml"/>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </center>
</BorderPane>
